{% extends '::layout/layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            {% include '::modulesUsed/navigation.html.twig' %}
            <div class="span9">
                <div class="row">
                    <div class="span5">
                        <img src="{{ appartement.image }}" alt="NeigeEtSoleil" width="470" height="310">
                    </div>

                    <div class="span4">
                        <h4>{{ appartement.nomImmeubleA }}</h4>
                        <h5>{{ appartement.villeA }}, {{ appartement.cpA }}</h5>
                        <p>{{ appartement.description }}</p>
                        <h5>{{ appartement.typeAppartement }}, {{ appartement.superficie }} m²</h5>
                        <h4>{{ appartement.prix }}€ /nuit</h4>
                        {% if is_granted('ROLE_USER') %}
                            <form action="{{ path('Reservation', {'id' : appartement.id}) }}">
                            <div>
                                <button class="btn btn-primary">Réserver !</button>
                            </div>
                            </form>
                        {% else %}<form action="{{path('fos_user_security_login') }}">
                            <div>
                                <button class="btn btn-primary">Réserver !</button>
                            </div>
                        </form>
                        {% endif %}
                    </div>
                </div>


            </div>
        </div>
    </div>

{% endblock %}