{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h2>Liste des Appartements</h2>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom Immeuble</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Superficie</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for appartement in appartements %}
            <tr>
                <td><a href="{{ path('adminAppartements_show', { 'id': appartement.id }) }}">{{ appartement.id }}</a></td>
                <td>{{ appartement.nomImmeubleA }}</td>
                <td>{{ appartement.adresse }}</td>
                <td>{{ appartement.villeA }}</td>
                <td>{{ appartement.cpA }}</td>
                <td>{{ appartement.superficie }} m²</td>
                <td>{{ appartement.prix }} € / nuit</td>
                <td>
                    <a href="{{ path('adminAppartements_show', { 'id': appartement.id }) }}"><i class="icon-folder-open"></i></a>
                    <a href="{{ path('adminAppartements_edit', { 'id': appartement.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminAppartements_new') }}">Ajouter un appartement</a>
        </li>
    </ul>
{% endblock %}